<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/penggunaToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
            <Button
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_arrow_back"
                android:id="@+id/back_btn_edit"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/back_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_bold"
                android:textSize="18dp"
                android:text="Edit Pengguna"
                android:textColor="#000"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_below="@+id/action_bar_notif"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="90dp">
    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/gambar_profile"
        android:src="@drawable/bussiness"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:id="@+id/ganti_gambar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-40dp"
        android:layout_toRightOf="@+id/gambar_profile"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_photo_camera"
        android:tint="#FFFF"
        android:background="@drawable/button_background"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp">
        <TextView
            android:id="@+id/nama_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:fontFamily="@font/sf_pro_text_regular"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#000"
            android:text="Bu Guru"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@id/nama_txt"
            android:id="@+id/nama_edit"/>
        <TextView
            android:id="@+id/nik_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:layout_marginTop="31dp"
            android:layout_below="@id/nama_txt"
            android:fontFamily="@font/sf_pro_text_regular"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#000"
            android:text="934748773"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@id/nik_txt"
            android:layout_below="@id/nama_edit"
            android:id="@+id/nik_edit"/>
        <TextView
            android:id="@+id/notlp_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="No Tlp"
            android:layout_marginTop="31dp"
            android:layout_below="@id/nik_txt"
            android:fontFamily="@font/sf_pro_text_regular"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#000"
            android:text="082893649369"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="31dp"
            android:layout_toRightOf="@id/nik_txt"
            android:layout_below="@id/nik_edit"
            android:id="@+id/notlp_edit"/>
        <TextView
            android:id="@+id/email_txt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="31dp"
            android:layout_below="@id/notlp_txt"
            android:fontFamily="@font/sf_pro_text_regular"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textColor="#000"
            android:background="@android:color/transparent"
            android:text="buguru@esaku.id"
            android:layout_marginTop="31dp"
            android:textSize="14dp"
            android:layout_toRightOf="@id/nik_txt"
            android:layout_below="@id/notlp_edit"
            android:id="@+id/email_edit"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="SIMPAN"
            android:background="@drawable/button_background"
            android:textColor="#FFFF"
            android:layout_below="@+id/email_edit"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>


</LinearLayout>