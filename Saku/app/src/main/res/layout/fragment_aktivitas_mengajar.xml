<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_aktivitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <View
                android:layout_marginLeft="5dp"
                android:id="@+id/garis"
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/garis"
                android:layout_centerVertical="true"
                android:text="Absensi Kelas"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/pesan_list_tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="31/12/2019"
                    android:textSize="11dp"
                    android:fontFamily="@font/sf_pro_text_regular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pesan_list_jam"
                    android:text="10:39"
                    android:textSize="11dp"
                    android:fontFamily="@font/sf_pro_text_regular"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/kelas_jumlah"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XI-IPA-1|35 Siswa"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"/>

            <Button
                android:id="@+id/absen_btn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/kelas_jumlah"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_background"
                android:textSize="12dp"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Absen"
                android:textAllCaps="false"
                android:textColor="#FFFF"

                />
            <LinearLayout
                android:id="@+id/absen_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_below="@id/kelas_jumlah"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hadir"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sf_pro_text_regular"/>
                <Button
                    android:id="@+id/siswa_hadir_txt"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textAllCaps="false"
                    android:textColor="#FFFF"
                    android:text="20"
                    android:background="@drawable/button_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sakit"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sf_pro_text_regular"/>
                    <Button
                        android:id="@+id/siswa_sakit_txt"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAllCaps="false"
                        android:textColor="#FFFF"
                        android:text="20"
                        android:background="@drawable/sakit_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ijin"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sf_pro_text_regular"/>
                    <Button
                        android:id="@+id/siswa_ijin_txt"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAllCaps="false"
                        android:textColor="#FFFF"
                        android:text="20"
                        android:background="@drawable/ijin_background"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alpha"
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:fontFamily="@font/sf_pro_text_regular"/>
                    <Button
                        android:id="@+id/siswa_alpha_txt"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAllCaps="false"
                        android:textColor="#FFFF"
                        android:text="20"
                        android:background="@drawable/alpha_background"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_pesan_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card_view_aktivitas"/>
    </RelativeLayout>

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="bottom|end">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_fab_pesan"
        android:layout_marginRight="20dp"
        app:backgroundTint="#007AFF"
        android:layout_marginBottom="40dp">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>
   </RelativeLayout>
</FrameLayout>