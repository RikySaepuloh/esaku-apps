<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/siswa_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/bussiness"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/siswa_img"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nama_siswa_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="Nama Siswa"/>
            <TextView
                android:id="@+id/nis_siswa_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_text_regular"
                android:text="3289746037"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/siswa_sakit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textAllCaps="false"
                android:textColor="#A6A6A6"
                android:text="s"
                android:background="@drawable/hadir_ket_background"/>
            <Button
                android:id="@+id/siswa_ijin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textAllCaps="false"
                android:textColor="#A6A6A6"
                style="@style/TextAppearance.AppCompat"
                android:text="i"
                android:background="@drawable/hadir_ket_background"/>
            <Button
                android:id="@+id/siswa_alpha"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:textAllCaps="false"
                android:textColor="#A6A6A6"
                style="@style/TextAppearance.AppCompat"
                android:text="a"
                android:background="@drawable/hadir_ket_background"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>