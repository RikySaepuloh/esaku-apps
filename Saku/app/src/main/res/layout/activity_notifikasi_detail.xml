<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_arrow_back"
            android:id="@+id/back_btn_notifikasi"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/action_bar_notif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifikasi"
            android:fontFamily="@font/sf_pro_text_bold"
            android:textColor="#000"
            android:layout_toRightOf="@id/back_btn_notifikasi"
            android:textSize="18dp"
            />

    </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_dropshadow"
        android:layout_below="@+id/action_bar_notif"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/judul_notifikasi_detail"
        android:fontFamily="@font/sf_pro_text_bold"
        android:text="Judul Notifikasi"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tgl_notif_detail"
        android:fontFamily="@font/sf_pro_text_regular"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:text="20 November 2016"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deskripsi_notif_detail"
        android:fontFamily="@font/sf_pro_text_regular"
        android:layout_marginLeft="10dp"
        android:textSize="14dp"
        android:textColor="#000"
        android:text="Deskripsi ini dari notifikasi yang akan disampaikan kepada penerima notifikasi"/>

</LinearLayout>